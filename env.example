# Environment variables for OpenStock Backend
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/openstock

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production-make-it-long-and-random
JWT_EXPIRATION=1800000

# Finnhub API Configuration
FINNHUB_API_KEY=your-finnhub-api-key-here

# Email Configuration (Gmail SMTP)
NODEMAILER_EMAIL=your-gmail-email@gmail.com
NODEMAILER_PASSWORD=your-gmail-app-password

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
JAVA_VERSION=21
